<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:text="Gemder:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/maleBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/femaleBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textSize="18sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="87dp"
                    android:layout_height="match_parent"
                    android:text="Age:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/ageText"
                    android:layout_width="166dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="87dp"
                    android:layout_height="match_parent"
                    android:text=" years"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="87dp"
                    android:layout_height="match_parent"
                    android:text="Height:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/feetText"
                    android:layout_width="63dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:text=" ft"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/inchText"
                    android:layout_width="63dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:text=" inch"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

            </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:text="Weight:"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/weightText"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:text=" kg"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="229dp"
                    android:layout_height="match_parent"
                    android:text="Excercise Type:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"/>

                <CheckBox
                    android:id="@+id/sedentaryBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sedentary (little or no exercise)"
                    android:textSize="18sp" />
                <CheckBox
                    android:id="@+id/lightActiveBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Light active (exercise 1-3 days/week)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/moderateActiveBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Moderate active (exercise 3-5 days/week)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/activeBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Active (exercise 6-7 days/week)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/veryActiveBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Very active (hard exercise 6-7 days/week)"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="SUBMIT" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>